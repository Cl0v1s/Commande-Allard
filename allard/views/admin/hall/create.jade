extends ./../../layout

block content 
	h1 Ajouter une nouvelle entrée au Hall of Fame
	form
		if entry != null
			input(type='hidden', name='id', value=entry.id)

		div
			h3 Titre
			if entry == null
				input(type='text', name='title', placeholder='Choisissez un titre pour votre image...')
			else 
				input(type='text', name='title', placeholder='Choisissez un titre pour votre image...', value=entry.title)

		div 
			h3 Description
			if entry == null
				textarea(name='description', placeholder='Rédigez une description pour votre image...')
			else 
				textarea(name='description', placeholder='Rédigez une description pour votre image...')= entry.description

		div 
			h3 Url de l'image 
			if entry == null
				input(type='text', name='image', placeholder='Entrez l\'url de votre image...')
			else 
				input(type='text', name='image', placeholder='Entrez l\'url de votre image...', value=entry.image)

		div 
			button.submit Envoyer